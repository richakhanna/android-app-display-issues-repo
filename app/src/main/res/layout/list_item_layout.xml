<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_full_issue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_item"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_large"
        android:orientation="vertical"
        android:padding="4dp">


        <TextView
            android:id="@+id/tv_issue_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text=""
            android:textColor="@color/pitch_black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_issue_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_large"
            android:gravity="left"
            android:text=""
            android:textColor="@color/pitch_black"
            android:textSize="15sp" />

    </LinearLayout>


    <View
        android:id="@+id/separator_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grey_line_height"
        android:layout_marginLeft="@dimen/margin_large"
        android:background="@color/separator_grey_line" />


</LinearLayout>